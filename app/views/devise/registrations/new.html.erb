<div class="row-fluid">
  <div class="span4 well">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<fieldset>

<legend>Sign up</legend>

<div class="control-group">
    <div class= "controls">
    <%= f.label :first_name, :class => "control-label"  %><br />
    <%= f.text_field :first_name, autofocus: true, :class => "input x-large" %>
  </div>
</div>

<div class="control-group">
    <%= f.label :last_name, :class => "control-label"  %><br />
    <div class= "controls">
    <%= f.text_field :last_name, autofocus: true, :class => "input x-large" %>
  </div>
</div>

<div class="control-group">
    <%= f.label :university, :class => "control-label"  %><br />
    <div class= "controls">
    <%= f.collection_select :university_id, University.all, :id, :name, autofocus: true, :class => "input x-large" %>
  </div>
</div>

<div class="control-group">
    <%= f.label :graduation_year, :class => "control-label"  %><br />
    <div class= "controls">
    <%= f.text_field :grad_year, autofocus: true, :class => "input x-large" %>
  </div>
</div>

<div class="control-group">
    <%= f.label :email, :class => "control-label"  %><br />
    <div class= "controls">
    <%= f.email_field :email, autofocus: true, :class => "input x-large" %>
  </div>
</div>


<div class="control-group">
    <%= f.label :password, :class => "control-label"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class= "controls">
    <%= f.password_field :password, autocomplete: "off", :class => "input x-large" %>
  </div>
</div>

  <div class="control-group">
    <%= f.label :password_confirmation, :class => "control-label"  %><br />
    <div class= "controls">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input x-large" %>
   </div>
</div>

  <div class="control-group">
    <%= f.submit "Sign up", :class => "btn btn-primary" %>
    <div class= "controls">
  </div>
</div>

<% end %>

</fieldset>
</form>

<%= render "devise/shared/links" %>
