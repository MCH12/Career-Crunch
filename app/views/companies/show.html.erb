<div id="main-content">
    <div class="container">
        <p>
            <%= image_tag(@company.logo.url(:large)) %>
        </p>
        <p>
          <strong>Name:</strong>
          <%= @company.name %>
        </p>

        <p>
          <strong>Industry:</strong>
          <%= @company.industry.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @company.description %>
        </p>

        <%= link_to 'Edit', edit_company_path(@company) %> |
        <%= link_to 'Back', companies_path %>
    </div>
</div>
